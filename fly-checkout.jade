- var page = "fly-checkout";
doctype html
html(lang="vi")
    head
        include jades/head

    body(ontouchstart='')
        include jades/header.jade
        main.wrapper
            section.fly-checkout
                .fly-step
                    .container
                        .fly-step__row
                            .fly-step__left
                                //show desktop
                                .d-none.d-sm-block
                                    .step-box
                                        .step-box__item
                                            p 1. Select
                                        .step-box__item.active
                                            p 2. Book
                                        .step-box__item
                                            p 3. Pay
                                //show-mobile
                                .d-block.d-sm-none
                                    .step-box
                                        .step-box__item
                                            p 1. Book
                            .fly-step__right
                                .edit-search
                                    i.fas.fa-edit
                                    span Edit search


                .place-box-wrapper
                    .container
                        .place-box
                            .place-box__start
                                strong Hanoi (HAN)
                                p Vietnam
                            .place-box__icon
                                svg(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', width='29', height='29', viewBox='0 0 29 29')
                                    g
                                        g
                                            image(width='29', height='29', xlink:href='data:image/png;base64,')
                            .place-box__end
                                strong Bangkok (BKK)
                                p Thailand

                .fly-checkout__form
                    .container
                        .form-checkout
                            .box-title
                                p Passenger details
                            .form-checkout__group
                                .form-checkout__title
                                    h5 Adult 1
                                    p Please make sure that you enter the names of all passengers as shown on passports. This will avoid problems at the airport. Name changes are not permitted once the booking has been finalised.
                                .form-checkout__row.row-info
                                    .form-group.form-group_title
                                        label
                                            | Title
                                            span *
                                        select.form-control
                                            option Select 1
                                            option Select 2
                                            option Select 3
                                    .form-group.form-group_first
                                        label
                                            | First/Given and Middle Name
                                            span *
                                        input.form-control(type='text')
                                    .form-group.form-group_last
                                        label
                                            | Last/Family Name
                                            span *
                                        input.form-control(type='text')
                                    .form-group.form-group_pass
                                        label
                                            | Passport Number
                                            span *
                                        input.form-control(type='text')
                                .form-checkout__freq
                                    .form-checkout__title.add-freq
                                        h5
                                            | Add frequent fly
                                            i.fas.fa-caret-down
                                    .form-checkout__row.row-card
                                        .form-group
                                            select.form-control
                                                option Vietnam Airline
                                                option Vietjet Air
                                                option Ba
                                            input.form-control(type='text')
                                .form-checkout__row.row-date
                                    .form-group
                                        label Date of Birth:
                                        select.form-control
                                            option Day
                                            option 1
                                            option 2

                                        select.form-control
                                            option Month
                                            option 1
                                            option 2

                                        select.form-control
                                            option Year
                                            option 1
                                            option 2
                                .form-checkout__row.row-gender
                                    .form-group
                                        label
                                            | Gender:
                                            span *
                                        .radio
                                            input(type='radio' id='r1' name='radio')
                                            label(for='r1') Male
                                        .radio
                                            input(type='radio' id='r2' name='radio')
                                            label(for='r2') Female
                            .form-checkout__group
                                .form-checkout__title
                                    h5 Adult 2
                                    p Please make sure that you enter the names of all passengers as shown on passports. This will avoid problems at the airport. Name changes are not permitted once the booking has been finalised.
                                .form-checkout__row.row-info
                                    .form-group.form-group_title
                                        label
                                            | Title
                                            span *
                                        select.form-control
                                            option Select 1
                                            option Select 2
                                            option Select 3
                                    .form-group.form-group_first
                                        label
                                            | First/Given and Middle Name
                                            span *
                                        input.form-control(type='text')
                                    .form-group.form-group_last
                                        label
                                            | Last/Family Name
                                            span *
                                        input.form-control(type='text')
                                    .form-group.form-group_pass
                                        label
                                            | Passport Number
                                            span *
                                        input.form-control(type='text')
                                .form-checkout__freq
                                    .form-checkout__title.add-freq
                                        h5
                                            | Add frequent fly
                                            i.fas.fa-caret-down
                                    .form-checkout__row.row-card
                                        .form-group
                                            select.form-control
                                                option Vietnam Airline
                                                option Vietjet Air
                                                option Ba
                                            input.form-control(type='text')
                                .form-checkout__row.row-date
                                    .form-group
                                        label Date of Birth:
                                        select.form-control
                                            option Day
                                            option 1
                                            option 2

                                        select.form-control
                                            option Month
                                            option 1
                                            option 2

                                        select.form-control
                                            option Year
                                            option 1
                                            option 2
                                .form-checkout__row.row-gender
                                    .form-group
                                        label
                                            | Gender:
                                            span *
                                        .radio
                                            input(type='radio' id='r3' name='radio')
                                            label(for='r3') Male
                                        .radio
                                            input(type='radio' id='r4' name='radio')
                                            label(for='r4') Female


                        .form-checkout
                            .box-title
                                p Contact Information
                            .form-checkout__group
                                .form-checkout__text
                                    p (Country Code) + (Area Code) + (Phone Number). Ex: (84) (4) (1234567)
                                    p Please fill in your mobile phone number to receive notification or any changes in your flight itinerary.
                                .form-checkout__row.row-contact
                                    .form-group
                                        label
                                            | Phone Number
                                            span *
                                        input.form-control(type='text')
                                    .form-group
                                        label
                                            | Email address
                                            span *
                                        input.form-control(type='text')
                                    .form-group
                                        label
                                            | Confirm email address
                                            span *
                                        input.form-control(type='text')
                                .form-checkout__row.row-textarea
                                    .form-group
                                        label Special Request
                                        textarea.form-control
                        .fly-checkout__btn
                            a.btn.btn-orange.btn-round(href='fly-review.html') Continue
        include jades/footer.jade
        script(type='text/javascript' src="js/jquery-3.3.1.min.js")
        script(type='text/javascript' src="js/popper.min.js")
        script(type='text/javascript' src="js/bootstrap.min.js")
        script(type='text/javascript' src="js/slick.min.js")
        script.
            $('.add-freq h5').click(function () {
                $(this).parents('.form-checkout__freq').toggleClass('rotate');
                $(this).parents('.form-checkout__freq').find('.row-card').slideToggle(400);
            });




